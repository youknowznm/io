<% include ./common/header-tags.ejs %>
<% include ./common/md-header.ejs %>

<div class="main-wrap <% if (docs[0] === undefined) {%>empty<%}%>">

    <% if (docs[0] === undefined) {%>

        <h1 class="empty-msg">No posts found.</h1>
        <div class="main">
            <% include ./common/controll-panel.ejs %>
        </div>

    <%} else {%>

        <div class="main">

            <% for (let d of docs) {%>
                <div class="article" data-id="<%= d._id %>">
                    <div class="heading">
                        <h1 class="title">
                            <%-: d.title | breakToSpans %>
                        </h1>
                        <p class="summary">
                            <%= d.summary %>
                        </p>
                    </div>

                    <ul class="statistics">
                        <% if (d.liked > 0) {%>
                            <li class="liked">
                                <span class="content"><i class="icon"></i></span>
                                <span class="count"><%= d.liked %></span>
                            </li>
                        <%}%>
                        <% if (d.comments > 0) {%>
                            <li class="comments">
                                <span class="content"><i class="icon"></i></span>
                                <span class="count"><%= d.comments | 0%></span>
                            </li>
                        <%}%>
                    </ul>

                    <ul class="tags">
                        <% for (let tag of d.tags) {%>
                            <li class="tag" data-href="/<%= pageTitle %>s?tag=<%= tag %>">
                                <button class="md-button">
                                    <span class="content"><%= tag %></span>
                                    <div class="ripple-container"><span class="ripple"></span></div>
                                </button>
                            </li>
                        <% } %>
                    </ul>

                    <span class="bg-icon-wrap">
                        <span class="bg-icon _post"></span>
                    </span>
                </div>
            <%}%>
            <% include ./common/controll-panel.ejs %>
        </div>

    <%}%>

</div>

<% include ./common/footer-tags.ejs %>
