<% include ./common/header-tags.ejs %>
<% include ./common/md-header.ejs %>

<div class="main-wrap <% if (docs[0] === undefined) {%>empty<%}%>">

    <% if (docs[0] === undefined) {%>

        <div class="empty-msg-wrap">
            <h1 class="empty-msg">You have not written any posts.</h1>
        </div>
        <div class="main">
            <% include ./common/fixed-panel.ejs %>
        </div>

    <%} else {%>

        <div class="main">

            <% for (let d of docs) {%>
                <div class="post-wrap">
                    <a class="post-link" href="/posts/<%= d._id %>">
                        <div class="post">
                            <div class="heading">
                                <h1 class="title">
                                    <%-: d.title | breakToSpans %>
                                </h1>
                                <p class="summary">
                                    <%= d.summary %>
                                </p>
                            </div>

                            <ul class="statistics">
                                <% if (d.liked > 0) {%>
                                    <li class="liked">
                                        <span class="content"><i class="icon"></i></span>
                                        <span class="count"><%= d.liked %></span>
                                    </li>
                                <%}%>
                                <% if (d.comments > 0) {%>
                                    <li class="comments">
                                        <span class="content"><i class="icon"></i></span>
                                        <span class="count"><%= d.comments | 0%></span>
                                    </li>
                                <%}%>
                            </ul>

                            <ul class="tags">
                                <% for (let t of d.tags) {}%>
                                <li class="tag">
                                    <button class="md-button">
                                        <span class="content">javascript</span>
                                        <div class="ripple-container"><span class="ripple"></span></div>
                                    </button>
                                </li>
                                <li class="tag">
                                    <button class="md-button">
                                        <span class="content">mongodb</span>
                                        <div class="ripple-container"><span class="ripple"></span></div>
                                    </button>
                                </li>
                                <li class="tag">
                                    <button class="md-button">
                                        <span class="content">web</span>
                                        <div class="ripple-container"><span class="ripple"></span></div>
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </a>
                </div>
            <%}%>
            <% include ./common/fixed-panel.ejs %>
        </div>

    <%}%>

</div>

<div class="md-snackbar show-partial">
    <p class="_title">
        <span class="strong">Sign in</span> for better experiences.
    </p>
    <div class="_content">
        <div class="md-input dark email">
            <label class="placeholder" for="">Email</label>
            <input id="" class="_input" maxlength="20" />
            <p class="error"></p>
            <h5 class="char-counter">
                <span class="current"></span>&nbsp;/&nbsp;<span class="maximum"></span>
            </h5>
        </div>
        <div class="md-input dark password">
            <label class="placeholder" for="">Password</label>
            <input id="" class="_input" type="password" maxlength="20" />
            <p class="error"></p>
            <h5 class="char-counter">
                <span class="current"></span>&nbsp;/&nbsp;<span class="maximum"></span>
            </h5>
        </div>
        <div class="buttons">
            <button class="md-button _primary login">
                <span class="content">sign in</span>
                <div class="ripple-container"><span class="ripple"></span></div>
            </button>
            <button class="md-button register">
                <span class="content">register</span>
                <div class="ripple-container"><span class="ripple"></span></div>
            </button>
        </div>
    </div>
</div>

<% include ./common/footer-tags.ejs %>
