<% include ./common/header-tags.ejs %>
<% include ./common/md-header.ejs %>

<div class="main-wrap <% if (docs[0] === undefined) {%>empty<%}%>">

    <% if (docs[0] === undefined) {%>

        <div class="empty-msg-wrap">
            <h1 class="empty-msg">No products found.</h1>
        </div>
        <div class="main">
            <% include ./common/controll-panel.ejs %>
        </div>

    <%} else {%>

        <div class="main">
            <% for (let d of docs) {%>
                <!-- 与post不同#1：post指向本站上的文章地址，而product直接通往外链 -->
                <div class="product _block" data-ext-link="<%= d.content %>">
                    <div class="heading">
                        <h1 class="title">
                            <%-: d.title | breakToSpans %>
                        </h1>
                        <p class="summary">
                            <%= d.summary %>
                        </p>
                    </div>
                    <!-- 与post不同#2： 没有点赞情况等数据 -->
                    <ul class="tags">
                        <% for (let tag of d.tags) {%>
                            <li class="tag" data-origin-tag="<%= tag %>">
                                <button class="md-button">
                                    <span class="content"><%= tag %></span>
                                    <div class="ripple-container"><span class="ripple"></span></div>
                                </button>
                            </li>
                        <% } %>
                    </ul>
                    <span class="bg-icon-wrap">
                        <span class="bg-icon _product"></span>
                    </span>
                </div>
            <%}%>
            <% include ./common/controll-panel.ejs %>
        </div>

    <%}%>

</div>

<% include ./common/footer-tags.ejs %>
