<% include ./common/header-tags.ejs %>
<% include ./common/md-header.ejs %>

<div class="main-wrap">
    <div class="main">
        <div class="post-specific">
            <div class="markdown-parsed">
                <%-: doc.content | parseMarkdown %>
            </div>
            <div class="content-footer">
                <% for (let i = 0; i < doc.tags.length; i++) {%>
                    <button class="md-button _flat _primary">
                        <span class="content"><%= doc.tags[i] %></span>
                        <div class="ripple-container"><span class="ripple"></span></div>
                    </button>
                <%}%>
                <ul class="statistics">
                    <li class="liked">
                        <button class="md-icon-button _warn">
                            <span class="content"><i class="icon"></i></span>
                            <div class="ripple-container"><span class="ripple"></span></div>
                        </button>
                        <span class="count">0</span>
                    </li>
                    <li class="comments">
                        <button class="md-icon-button _warn">
                            <span class="content"><i class="icon"></i></span>
                            <div class="ripple-container"><span class="ripple"></span></div>
                        </button>
                        <span class="count">0</span>
                    </li>
                </ul>
            </div>

            <ul class="post-nav"></ul>

        </div>

        <% include ./common/controll-panel.ejs %>

    </div>

</div>

<% include ./common/footer-tags.ejs %>
