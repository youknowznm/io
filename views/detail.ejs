<% include ./common/header-tags.ejs %>
<% include ./common/md-header.ejs %>

<div class="main-wrap" data-uid="<%= doc._id %>">
    <div class="main">
        <div class="article-specific">
            <div class="markdown-parsed">
                <%-: doc.content | parseMarkdown %>
            </div>
            <div class="content-footer">
                <span class="created">
                    <%-: doc.created | formatDate %>
                </span>
                <% for (let i = 0; i < doc.tags.length; i++) {%>
                    <button class="md-button _flat _primary tag">
                        <span class="content"><%= doc.tags[i] %></span>
                        <div class="ripple-container"><span class="ripple"></span></div>
                    </button>
                <%}%>
            </div>
            <div class="comments-container">
                <!-- 输入评论 -->
                <div class="row">
                    <div class="md-textarea responsive-height comment-input">
                        <label class="placeholder" for="input_3">
                            <% if (userInfo.authLevel !== 0) {%>
                                Comment as <%= userInfo.currentUserNickname %>
                            <%} else {%>
                                Log in to leave comments.
                            <%}%>
                        </label>
                        <textarea id="input_3" class="_input" maxlength="500" <%if(userInfo.authLevel===0){%>disabled<%}%> ></textarea>
                        <p class="error"></p>
                        <h5 class="char-counter">
                            <span class="current"></span>/<span class="maximum"></span>
                        </h5>
                    </div>
                    <button class="submit-comment md-button _primary _disabled">
                        <span class="content">submit</span>
                        <div class="ripple-container"><span class="ripple"></span></div>
                    </button>
                </div>
                <!-- 评论列表 -->
                <div class="row">
                    <ul class="comments-list">
                        <% for (let c of doc.comments) {%>
                            <li class="comment">
                                <h3 class="comment-info">
                                    <span class="comment-author"><%= c.author[0].nickname %></span>
                                    <span class="comment-date"><%= c.created %></span>
                                </h3>
                                <p class="comment-content">
                                    <%= c.content %>
                                </p>
                            </li>
                        <%}%>
                    </ul>
                </div>
            </div>

            <ul class="article-nav"></ul>

        </div>

        <div class="black">

        </div>

        <% include ./common/controll-panel.ejs %>
    </div>

</div>

<% include ./common/footer-tags.ejs %>
