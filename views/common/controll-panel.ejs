<ul class="controll-panel">

    <!-- 仅在登录者为站长且位于非新建文章页时显示 -->
    <% if (static !== 'edit' && userInfo.authLevel === 2) {%>
    <li class="_create-new">
        <button class="md-button _round _warn">
            <span class="icon-wrap"><i class="icon"></i></span>
            <div class="ripple-container"><span class="ripple"></span></div>
            <p class="md-tooltip to-show-at-left">create</p>
        </button>
    </li>
    <%}%>

    <!-- 仅在登录者为站长且位于文章详情页时显示 -->
    <% if (static === 'detail' && userInfo.authLevel === 2) {%>
    <li class="_edit">
        <button class="md-button _round _warn">
            <span class="icon-wrap"><i class="icon"></i></span>
            <div class="ripple-container"><span class="ripple"></span></div>
            <p class="md-tooltip to-show-at-left">edit</p>
        </button>
    </li>
    <%}%>

    <!-- 仅在已登录时显示 -->
    <% if (userInfo.authLevel !== 0) {%>
    <li class="_logout">
        <button class="md-button _round _warn">
            <span class="icon-wrap"><i class="icon"></i></span>
            <div class="ripple-container"><span class="ripple"></span></div>
            <p class="md-tooltip to-show-at-left">log out</p>
        </button>
    </li>
    <%}%>

    <!-- TODO: 高度上空间有点紧张，有时间看有没有解决方案 -->
