<ul class="control-panel">

    <!-- 仅在登录者为站长且位于非新建文章页时显示 -->
    <% if (static !== 'edit' && userInfo.authLevel === 2) {%>
        <li class="panel-item panel-create-new jm-button _round" data-tooltip-position="left" data-tooltip-content="create"></li>
    <%}%>

    <!-- 仅在登录者为站长且位于文章详情页时显示 -->
    <% if (static === 'detail' && userInfo.authLevel === 2) {%>
        <li class="panel-item panel-edit jm-button _round" data-tooltip-position="left" data-tooltip-content="edit"></li>
    <%}%>

    <!-- 仅在已登录时显示 -->
    <% if (userInfo.authLevel !== 0) {%>
        <li class="panel-item panel-log-out jm-button _round" data-tooltip-position="left" data-tooltip-content="log out"></li>
    <%}%>

    <li class="panel-item panel-to-top jm-button _round" data-tooltip-position="left" data-tooltip-content="to top"></li>

</ul>